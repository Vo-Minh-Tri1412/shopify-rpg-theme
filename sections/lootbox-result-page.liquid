<style>
  /* CSS GIá»® NGUYÃŠN (Chá»‰ thÃªm chÃºt mÃ u cho nÃºt Error á»Ÿ trÃªn) */
  body { margin: 0; overflow: hidden; background: #000; }
  .gacha-fullscreen { position: fixed; top: 0; left: 0; width: 100vw; height: 100vh; display: flex; justify-content: center; align-items: center; z-index: 99999; background: #050505; font-family: 'Cinzel', serif; }
  .gacha-stage { width: 100%; height: 100%; display: flex; flex-direction: column; justify-content: center; align-items: center; position: relative; z-index: 10; }
  .phase-container { display: flex; flex-direction: column; justify-content: center; align-items: center; width: 100%; text-align: center; }
  .gacha-bg { position: absolute; inset: 0; z-index: 0; }
  .nebula { width: 100%; height: 100%; background: radial-gradient(circle at 50% 50%, #1a0b2e 0%, #000 70%); opacity: 0.8; }
  .chest-wrapper { position: relative; margin-bottom: 30px; display: flex; justify-content: center; }
  .chest-img { width: 280px; height: 280px; object-fit: contain; filter: drop-shadow(0 0 30px rgba(255, 215, 0, 0.3)); animation: breathe 3s ease-in-out infinite; }
  @keyframes breathe { 0%, 100% { transform: scale(1) translateY(0); } 50% { transform: scale(1.03) translateY(-10px); } }
  .shaking { animation: violent-shake 0.5s cubic-bezier(.36,.07,.19,.97) both infinite !important; }
  @keyframes violent-shake { 10%, 90% { transform: translate3d(-2px, 0, 0) rotate(-1deg); } 20%, 80% { transform: translate3d(4px, 0, 0) rotate(2deg); } 30%, 50%, 70% { transform: translate3d(-8px, 0, 0) rotate(-3deg); } 40%, 60% { transform: translate3d(8px, 0, 0) rotate(3deg); } }
  .cinematic-title { font-size: 2.5rem; color: #ffd700; text-shadow: 0 0 20px #ffd700; margin: 0 0 25px 0; letter-spacing: 3px; text-transform: uppercase; text-align: center; }
  .btn-summon { background: transparent; color: #fff; border: 2px solid #ffd700; padding: 15px 50px; font-size: 1.2rem; font-family: 'Cinzel', serif; font-weight: bold; cursor: pointer; transition: 0.3s; box-shadow: 0 0 20px rgba(255, 215, 0, 0.2); margin-top: 10px; }
  .btn-summon:hover { background: #ffd700; color: #000; box-shadow: 0 0 40px rgba(255, 215, 0, 0.6); transform: scale(1.05); }
  .reward-img { width: 300px; height: 300px; object-fit: contain; filter: drop-shadow(0 0 30px rgba(255,215,0,0.8)); animation: popIn 0.8s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards; transform: scale(0); }
  @keyframes popIn { 0% { transform: scale(0); opacity: 0; } 100% { transform: scale(1); opacity: 1; } }
  .reward-info-box { margin-top: 20px; text-align: center; animation: slideUp 1s ease-out 0.5s forwards; opacity: 0; transform: translateY(20px); }
  @keyframes slideUp { to { opacity: 1; transform: translateY(0); } }
  .rarity-label { font-size: 1.2rem; letter-spacing: 3px; font-weight: bold; margin-bottom: 10px; }
  .reward-title { font-size: 2rem; color: #fff; text-shadow: 0 0 10px #000; margin: 0 0 20px 0; }
  .code-pill { background: #111; border: 2px dashed #888; color: #fff; padding: 10px 30px; font-size: 1.5rem; font-family: monospace; font-weight: bold; display: inline-block; margin-bottom: 20px; user-select: all; cursor: pointer; }
  .white-flash { position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: #fff; z-index: 99999; opacity: 0; pointer-events: none; }
  .flash-active { animation: flashbang 1.5s ease-out forwards; }
  @keyframes flashbang { 0% { opacity: 0; } 10% { opacity: 1; } 100% { opacity: 0; } }
  .god-rays { position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); width: 200vmax; height: 200vmax; background: repeating-conic-gradient(from 0deg, rgba(255, 215, 0, 0.1) 0deg 10deg, transparent 10deg 20deg); animation: rotateRays 20s linear infinite; z-index: -1; }
  @keyframes rotateRays { from { transform: translate(-50%, -50%) rotate(0deg); } to { transform: translate(-50%, -50%) rotate(360deg); } }
  .btn-claim { background: linear-gradient(to bottom, #ffd700, #b8860b); color: #000; border: none; padding: 15px 50px; font-weight: bold; font-size: 1.2rem; cursor: pointer; border-radius: 5px; font-family: 'Cinzel', serif; box-shadow: 0 5px 20px rgba(255,215,0,0.3); }
  .btn-claim:hover { filter: brightness(1.2); transform: translateY(-2px); }
</style>

<script>
const STORAGE_KEY = 'rpg_lootbox_history';

document.addEventListener('DOMContentLoaded', function() {
  initPage();
});

function getUrlParams() {
  const url = window.location.href;
  const getParam = (name) => {
    const regex = new RegExp('[?&]' + name + '=([^&]*)');
    const res = regex.exec(url);
    return res ? decodeURIComponent(res[1]) : null;
  };
  return { token: getParam('token'), product: getParam('product'), auto: getParam('open_result') };
}

function seededRandom(seed) {
  var x = Math.sin(seed++) * 10000;
  return x - Math.floor(x);
}

async function initPage() {
  const params = getUrlParams();
  const token = params.token;

  // --- LOGIC CHáº¶N TRUY Cáº¬P TRá»°C TIáº¾P ---
  if (!token) {
    // KhÃ´ng cÃ³ token -> Hiá»‡n mÃ n hÃ¬nh lá»—i ngay láº­p tá»©c
    document.getElementById('phase-error').style.display = 'flex';
    document.getElementById('phase-1-box').style.display = 'none';
    return; // Dá»«ng má»i xá»­ lÃ½ khÃ¡c
  }

  // Náº¿u cÃ³ Token thÃ¬ má»›i cháº¡y tiáº¿p
  // 1. Load áº£nh sáº£n pháº©m
  if(params.product) {
    try {
      const res = await fetch('/products/' + params.product + '.js');
      const product = await res.json();
      document.getElementById('chest-img').src = product.featured_image;
      document.getElementById('product-name').innerText = product.title;
      window.currentHandle = params.product;
    } catch(e) {}
  }

  // 2. Check lá»‹ch sá»­
  const history = JSON.parse(localStorage.getItem(STORAGE_KEY) || '{}');
  if (history[token]) {
    showResultImmediate(history[token]);
    return;
  }

  // 3. Hiá»‡n rÆ°Æ¡ng Ä‘á»ƒ má»Ÿ (VÃ¬ Ä‘Ã£ qua vÃ²ng kiá»ƒm tra token)
  document.getElementById('phase-1-box').style.display = 'flex';

  if(params.auto === 'true') {
    setTimeout(() => triggerOpenSequence(), 1000);
  }
}

async function triggerOpenSequence() {
  const params = getUrlParams();
  const token = params.token;
  
  if (!token) return; // Cháº·n thÃªm láº§n ná»¯a cho cháº¯c

  const seed = parseInt(token.replace(/\D/g, '')) || Date.now();

  const chest = document.getElementById('chest-img');
  const btn = document.getElementById('btn-open');
  btn.style.display = 'none';
  chest.classList.add('shaking');
  
  let lootTable = [];
  if (window.currentHandle) {
    try {
      const res = await fetch('/products/' + window.currentHandle + '?section_id=lootbox-data');
      const html = await res.text();
      const parser = new DOMParser();
      const doc = parser.parseFromString(html, 'text/html');
      const dataEl = doc.getElementById('loot-table-data');
      if (dataEl) lootTable = JSON.parse(dataEl.textContent);
    } catch(e) {}
  }
  if(!lootTable.length) lootTable = [{ name: 'Mystery Item', image: '', chance: 100 }];
  
  const reward = getSeededWeightedRandom(lootTable, seed);
  const code = generateSeededCode(seed);

  const history = JSON.parse(localStorage.getItem(STORAGE_KEY) || '{}');
  history[token] = { name: reward.name, image: reward.image, code: code, chance: reward.chance || 100 };
  localStorage.setItem(STORAGE_KEY, JSON.stringify(history));

  setTimeout(() => {
    document.getElementById('flash-overlay').classList.add('flash-active');
    setTimeout(() => {
      document.getElementById('phase-1-box').style.display = 'none';
      setupResultUI(reward.name, reward.image, code, reward.chance);
      document.getElementById('phase-2-result').style.display = 'flex';
    }, 100);
  }, 2500);
}

function showResultImmediate(data) {
  document.getElementById('phase-1-box').style.display = 'none';
  setupResultUI(data.name, data.image, data.code, data.chance);
  
  const lbl = document.getElementById('rarity-label');
  lbl.innerText += " (OPENED)";
  lbl.style.opacity = "0.7";
  
  document.getElementById('phase-2-result').style.display = 'flex';
}

function setupResultUI(name, image, code, chance) {
  document.getElementById('reward-img').src = image || document.getElementById('chest-img').src;
  document.getElementById('reward-name').innerText = name;
  document.getElementById('reward-code').innerText = code;

  const lbl = document.getElementById('rarity-label');
  const codePill = document.getElementById('reward-code');
  
  if (chance <= 5) {
    lbl.innerText = "ðŸŒŸ LEGENDARY DROP ðŸŒŸ";
    lbl.style.color = "#ffd700"; codePill.style.borderColor = "#ffd700"; codePill.style.color = "#ffd700";
  } else if (chance <= 20) {
    lbl.innerText = "ðŸ”® EPIC DROP";
    lbl.style.color = "#a335ee"; codePill.style.borderColor = "#a335ee"; codePill.style.color = "#a335ee";
  } else if (chance <= 50) {
    lbl.innerText = "ðŸ”¹ RARE DROP";
    lbl.style.color = "#3498db"; codePill.style.borderColor = "#3498db"; codePill.style.color = "#3498db";
  } else {
    lbl.innerText = "COMMON DROP";
    lbl.style.color = "#95a5a6"; codePill.style.borderColor = "#95a5a6"; codePill.style.color = "#fff";
  }
}

function getSeededWeightedRandom(items, seed) {
  let total = items.reduce((s, i) => s + (i.chance||0), 0);
  let r = seededRandom(seed) * total;
  for(let i=0; i<items.length; i++) {
    r -= (items[i].chance||0);
    if(r <= 0) return items[i];
  }
  return items[0];
}

function generateSeededCode(seed) {
  const chars = 'ABCDEFGHJKLMNPQRSTUVWXYZ23456789';
  let c = '';
  for(let i=0; i<12; i++) { 
    if(i>0 && i%4===0) c+='-';
    let idx = Math.floor(seededRandom(seed + i) * chars.length);
    c += chars.charAt(idx); 
  }
  return c;
}

function copyCode(el) {
  navigator.clipboard.writeText(el.innerText);
  alert("Copied: " + el.innerText);
}
</script>

