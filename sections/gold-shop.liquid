  }
</style>

<script>
  // Customer-specific keys
  {% if customer %}
    const GOLD_CUSTOMER_ID = {{ customer.id }};
  {% else %}
    const GOLD_CUSTOMER_ID = null;
  {% endif %}
  const GOLD_KEY_PREFIX = GOLD_CUSTOMER_ID ? `rpg_${GOLD_CUSTOMER_ID}_` : 'rpg_guest_';
  const KEY_GOLD = GOLD_KEY_PREFIX + 'gold';
  const KEY_LOOTBOXES = GOLD_KEY_PREFIX + 'lootboxes';
  
  // Lootbox types available for purchase
  const LOOTBOX_TYPES = [
    { 
      id: 'common', 
      name: 'Common Box', 
      price: 50, 
      icon: 'üì¶', 
      color: '#888',
      image: 'https://cdn-icons-png.flaticon.com/512/4230/4230573.png',
      prizes: [
        { name: '5% Discount', code: 'COMMON_5OFF', chance: 40, icon: 'üé´' },
        { name: '10 AP Points', ap: 10, chance: 35, icon: '‚ö°' },
        { name: '10% Discount', code: 'COMMON_10OFF', chance: 20, icon: 'üéüÔ∏è' },
        { name: '50 Gold Back!', gold: 50, chance: 5, icon: 'ü™ô' }
      ]
    },
    { 
      id: 'rare', 
      name: 'Rare Box', 
      price: 150, 
      icon: 'üéÅ', 
      color: '#3498db',
      image: 'https://cdn-icons-png.flaticon.com/512/4230/4230588.png',
      prizes: [
        { name: '10% Discount', code: 'RARE_10OFF', chance: 35, icon: 'üé´' },
        { name: '30 AP Points', ap: 30, chance: 30, icon: '‚ö°' },
        { name: '15% Discount', code: 'RARE_15OFF', chance: 25, icon: 'üéüÔ∏è' },
        { name: '200 Gold Back!', gold: 200, chance: 10, icon: 'üí∞' }
      ]
    },
    { 
      id: 'epic', 
      name: 'Epic Box', 
      price: 400, 
      icon: 'üëë', 
      color: '#a335ee',
      image: 'https://cdn-icons-png.flaticon.com/512/4230/4230550.png',
      prizes: [
        { name: '15% Discount', code: 'EPIC_15OFF', chance: 30, icon: 'üé´' },
        { name: '100 AP Points', ap: 100, chance: 25, icon: '‚ö°' },
        { name: '25% Discount', code: 'EPIC_25OFF', chance: 25, icon: 'üéüÔ∏è' },
        { name: '500 Gold Back!', gold: 500, chance: 15, icon: 'üí∞' },
        { name: 'FREE SHIPPING', code: 'EPIC_FREESHIP', chance: 5, icon: 'üöö' }
      ]
    },
    { 
      id: 'legendary', 
      name: 'Legendary Box', 
      price: 1000, 
      icon: 'üèÜ', 
      color: '#ff6b00',
      image: 'https://cdn-icons-png.flaticon.com/512/4230/4230527.png',
      prizes: [
        { name: '25% Discount', code: 'LEGEND_25OFF', chance: 25, icon: 'üé´' },
        { name: '300 AP Points', ap: 300, chance: 20, icon: '‚ö°' },
        { name: '40% Discount', code: 'LEGEND_40OFF', chance: 20, icon: 'üéüÔ∏è' },
        { name: '1500 Gold Back!', gold: 1500, chance: 20, icon: 'üí∞' },
        { name: '50% MEGA DISCOUNT', code: 'LEGEND_50OFF', chance: 10, icon: 'üíé' },
        { name: 'FREE ORDER (100% OFF)', code: 'JACKPOT_FREE', chance: 5, icon: 'üé∞' }
      ]
    }
  ];
  
  let currentOpeningBox = null;
  let currentPrize = null;
  
  document.addEventListener('DOMContentLoaded', function() {
    updateGoldDisplay();
    renderLootboxShop();
    renderInventory();
  });
  
  function getGold() {
    return parseInt(localStorage.getItem(KEY_GOLD) || 0);
  }
  
  function setGold(amount) {
    localStorage.setItem(KEY_GOLD, amount);
    updateGoldDisplay();
  }
  
  function updateGoldDisplay() {
    const gold = getGold();
    document.getElementById('current-gold-balance').innerText = gold.toLocaleString();
    renderLootboxShop(); // Re-render to update button states
  }
  
  function getLootboxInventory() {
    return JSON.parse(localStorage.getItem(KEY_LOOTBOXES) || '{}');
  }
  
  function saveLootboxInventory(inv) {
    localStorage.setItem(KEY_LOOTBOXES, JSON.stringify(inv));
    renderInventory();
  }
  
  function renderLootboxShop() {
    const gold = getGold();
    const grid = document.getElementById('lootbox-grid');
    grid.innerHTML = '';
    
    LOOTBOX_TYPES.forEach(box => {
      const canBuy = gold >= box.price;
      grid.innerHTML += `
        <div class="lootbox-card ${canBuy ? '' : 'disabled'}" style="--lb-color: ${box.color};" onclick="${canBuy ? `buyLootbox('${box.id}')` : ''}">
          <div class="lb-card-icon">${box.icon}</div>
          <div class="lb-card-name">${box.name}</div>
          <div class="lb-card-price">ü™ô ${box.price} Gold</div>
          <button class="lb-buy-btn ${canBuy ? '' : 'disabled'}">${canBuy ? 'BUY' : 'Need Gold'}</button>
        </div>
      `;
    });
  }
  
  function buyLootbox(boxId) {
    const box = LOOTBOX_TYPES.find(b => b.id === boxId);
    if (!box) return;
    
    const gold = getGold();
    if (gold < box.price) {
      alert('Not enough Gold!');
      return;
    }
    
    // Deduct gold
    setGold(gold - box.price);
    
    // Add to inventory
    const inv = getLootboxInventory();
    inv[boxId] = (inv[boxId] || 0) + 1;
    saveLootboxInventory(inv);
    
    // Show notification
    if (typeof showCustomAlert === 'function') {
      showCustomAlert('üì¶', 'PURCHASED!', `${box.name} added to your inventory!`);
    } else {
      alert(`${box.name} purchased!`);
    }
  }
  
  function renderInventory() {
    const inv = getLootboxInventory();
    const container = document.getElementById('lootbox-inventory');
    
    const totalBoxes = Object.values(inv).reduce((a, b) => a + b, 0);
    if (totalBoxes === 0) {
      container.innerHTML = '<p style="color:#666; font-style:italic;">No lootboxes yet. Buy some above!</p>';
      return;
    }
    
    let html = '';
    LOOTBOX_TYPES.forEach(box => {
      const count = inv[box.id] || 0;
      if (count > 0) {
        html += `
          <div class="inv-lootbox" style="border-color: ${box.color};" onclick="openLootbox('${box.id}')" title="Click to open">
            <div class="inv-lb-icon">${box.icon}</div>
            <div class="inv-lb-count">x${count}</div>
          </div>
        `;
      }
    });
    
    container.innerHTML = html;
  }
  
  function openLootbox(boxId) {
    const inv = getLootboxInventory();
    if (!inv[boxId] || inv[boxId] <= 0) return;
    
    const box = LOOTBOX_TYPES.find(b => b.id === boxId);
    currentOpeningBox = box;
    
    // Show modal
    document.getElementById('lb-box-image').src = box.image;
    document.getElementById('lb-opening-phase').style.display = 'block';
    document.getElementById('lb-result-phase').style.display = 'none';
    document.getElementById('lootbox-modal').style.display = 'flex';
  }
  
  function revealLootboxPrize() {
    if (!currentOpeningBox) return;
    
    // Remove 1 from inventory
    const inv = getLootboxInventory();
    inv[currentOpeningBox.id]--;
    if (inv[currentOpeningBox.id] <= 0) delete inv[currentOpeningBox.id];
    saveLootboxInventory(inv);
    
    // Roll for prize
    currentPrize = rollPrize(currentOpeningBox.prizes);
    
    // Show result
    document.getElementById('lb-opening-phase').style.display = 'none';
    document.getElementById('lb-result-phase').style.display = 'block';
    
    document.getElementById('lb-prize-icon').innerText = currentPrize.icon;
    document.getElementById('lb-prize-name').innerText = currentPrize.name;
    
    // Handle prize type
    if (currentPrize.code) {
      document.getElementById('lb-prize-desc').innerText = 'Use this code at checkout:';
      document.getElementById('lb-prize-code').innerText = currentPrize.code;
      document.getElementById('lb-prize-code').style.display = 'block';
      
      // Add to discount inventory
      if (typeof addDiscountToInventory === 'function') {
        addDiscountToInventory({
          name: currentPrize.name,
          code: currentPrize.code,
          type: 'lootbox',
          discount: currentPrize.name,
          icon: currentPrize.icon
        });
      }
    } else if (currentPrize.ap) {
      document.getElementById('lb-prize-desc').innerText = `+${currentPrize.ap} Activity Points added!`;
      document.getElementById('lb-prize-code').style.display = 'none';
      
      // Add AP
      const KEY_AP = GOLD_KEY_PREFIX + 'activity_points';
      const currentAP = parseInt(localStorage.getItem(KEY_AP) || 0);
      localStorage.setItem(KEY_AP, currentAP + currentPrize.ap);
    } else if (currentPrize.gold) {
      document.getElementById('lb-prize-desc').innerText = `+${currentPrize.gold} Gold added to your balance!`;
      document.getElementById('lb-prize-code').style.display = 'none';
      
      // Add Gold
      setGold(getGold() + currentPrize.gold);
    }
  }
  
  function rollPrize(prizes) {
    const total = prizes.reduce((sum, p) => sum + p.chance, 0);
    let random = Math.random() * total;
    
    for (const prize of prizes) {
      random -= prize.chance;
      if (random <= 0) return prize;
    }
    return prizes[prizes.length - 1];
  }
  
  function closeLootboxModal() {
    document.getElementById('lootbox-modal').style.display = 'none';
    currentOpeningBox = null;
    currentPrize = null;
    updateGoldDisplay();
