<div class="pl--announcement-banner-3__bg" style="
  --bg-color: {{ bg_color }};
  --bg-color-hover: {{ bg_color_hover }};
  --padding-left: {{ section.settings.padding_left }}{{ section.settings.padding_unit }};
  --padding-left-mobile: {{ section.settings.padding_left_mobile }}{{ section.settings.padding_unit_mobile }};
  --padding-right: {{ section.settings.padding_right }}{{ section.settings.padding_unit }};
  --padding-right-mobile: {{ section.settings.padding_right_mobile }}{{ section.settings.padding_unit_mobile }};
  --padding-top: {{ section.settings.padding_top }}{{ section.settings.padding_unit }};
  --padding-top-mobile: {{ section.settings.padding_top_mobile }}{{ section.settings.padding_unit_mobile }};
  --padding-bottom: {{ section.settings.padding_bottom }}{{ section.settings.padding_unit }};
  --padding-bottom-mobile: {{ section.settings.padding_bottom_mobile }}{{ section.settings.padding_unit_mobile }};
  --gap: {{ section.settings.gap }}{{ section.settings.gap_unit }};
  --gap-mobile: {{ section.settings.gap_mobile }}{{ section.settings.gap_unit_mobile }};
  --column-alignment: {{ section.settings.column_alignment }};
  --row-alignment: {{ section.settings.row_alignment }};
  --column-alignment-mobile: {{ section.settings.column_alignment_mobile }};
  --row-alignment-mobile: {{ section.settings.row_alignment_mobile }};
  {% if section.settings.border_mode != 'none' and section.settings.border_mode != 'custom' %}
    --border: {{ border_value }};
  {% elsif section.settings.border_mode == 'custom' %}
    {% if section.settings.border_top %}--border-top: {{ border_value }};{% endif %}
    {% if section.settings.border_bottom %}--border-bottom: {{ border_value }};{% endif %}
    {% if section.settings.border_left %}--border-left: {{ border_value }};{% endif %}
    {% if section.settings.border_right %}--border-right: {{ border_value }};{% endif %}
  {% endif %}
  ">
  <{{ link_tag }} href="{{ section.settings.link }}" {% if section.settings.target_blank %}target="_blank"{% endif %} class="pl--announcement-banner-3__link">
  <div class="--pl--page-width-global">
      <div class="--pl--padding-global pl--announcement-banner-3__inline-padding">
        <div class="pl--announcement-banner-3__container">
