<!-- This section only returns loot table data as JSON -->
<!-- Fetched by lootbox result page after checkout -->
<div id="loot-table-data" style="display:none;">
[
  {% if product.metafields.custom.lootbox.value %}
    {% for item in product.metafields.custom.lootbox.value %}
      {
        "name": "{{ item.name | escape }}",
        "image": "{{ item.image | image_url: width: 600 }}",
        "chance": {{ item.chance | default: 0 }}
      }{% unless forloop.last %},{% endunless %}
    {% endfor %}
  {% endif %}
]
</div>

{% schema %}
{
  "name": "Lootbox Data",
  "settings": []
}
{% endschema %}
