<div class="ap-shop-wrapper">
  <div class="shop-header">
    <h1 class="rpg-title">AP REDEMPTION SHOP</h1>
    <p class="rpg-sub">Exchange your accumulated Activity Points for valuable treasures.</p>
    <div class="user-ap-display">
      BALANCE: <span id="shop-current-ap" style="color:#ffd700; font-size:1.5em;">0</span> AP âš¡
    </div>
  </div>
  <div class="ap-grid" id="ap-grid-render"></div>
</div>

<!-- MODAL CONFIRM -->
<div id="shop-modal" class="rpg-modal-overlay">
  <div class="rpg-modal-box">
    <h3 id="modal-title" style="color:#ffd700">CONFIRMATION</h3>
    <p id="modal-msg">Redeem this reward?</p>
    <div id="coupon-display" class="code-box" style="display:none;" onclick="copyShopCode()">CODE</div>
    <div id="modal-actions" style="margin-top:20px;">
      <button id="btn-confirm" class="rpg-btn">REDEEM NOW</button>
      <button onclick="closeShopModal()" class="rpg-btn-secondary">CLOSE</button>
    </div>
  </div>
</div>

<style>
  .ap-shop-wrapper { background-color: #0a0a0c; color: #fff; padding: 50px 20px; min-height: 80vh; font-family: 'Cinzel', serif; text-align: center; }
  .rpg-title { color: #ffd700; text-shadow: 0 0 10px #ffd700; margin-bottom: 10px; }
  .user-ap-display { background: rgba(255,255,255,0.1); border: 1px solid #a335ee; display: inline-block; padding: 15px 30px; border-radius: 50px; margin: 20px 0 40px 0; font-weight: bold; }
  .ap-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 20px; max-width: 1000px; margin: 0 auto; }
  .shop-card { background: #151515; border: 1px solid #333; border-radius: 10px; padding: 20px; transition: 0.3s; }
  .shop-card:hover { transform: translateY(-5px); border-color: #a335ee; box-shadow: 0 0 15px rgba(163, 53, 238, 0.3); }
  .item-icon { font-size: 50px; margin-bottom: 15px; }
  .item-name { font-size: 1.2em; font-weight: bold; color: #fff; margin-bottom: 5px; }
  .item-price { color: #a335ee; font-weight: bold; margin-bottom: 15px; display: block; }
  .buy-btn { width: 100%; padding: 10px; background: #a335ee; border: none; color: #fff; font-weight: bold; cursor: pointer; text-transform: uppercase; font-family: 'Cinzel', serif; }
  .buy-btn:hover { background: #8e44ad; }
  .buy-btn.disabled { background: #333; color: #777; cursor: not-allowed; }
  .rpg-modal-overlay { position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.9); z-index: 99999; display: none; justify-content: center; align-items: center; }
  .rpg-modal-box { background: #111; border: 2px solid #ffd700; padding: 30px; width: 350px; text-align: center; border-radius: 10px; }
  .code-box { background: #222; border: 1px dashed #fff; padding: 15px; margin-top: 15px; color: #2ecc71; font-size: 1.5em; font-weight: bold; cursor: pointer; }
  .rpg-btn { background: #ffd700; color: #000; border: none; padding: 10px 20px; font-weight: bold; cursor: pointer; }
  .rpg-btn-secondary { background: transparent; border: 1px solid #777; color: #ccc; padding: 10px 20px; cursor: pointer; margin-left: 10px; }
</style>

<script>
  const SHOP_ITEMS = [
    // ÄÃ£ xÃ³a item Freeship
    { id: 2, name: "Health Potion (5% Off)", price: 300, icon: "ðŸ§ª", code: "HEAL_POTION_5" },
    { id: 3, name: "Iron Sword (10% Off)", price: 600, icon: "âš”ï¸", code: "SWORD_10" },
    { id: 4, name: "King's Crown (20% Off)", price: 1500, icon: "ðŸ‘‘", code: "KING_20" }
  ];
  const SHOP_KEY_AP = 'rpg_activity_points';
  let userAP = 0, selectedItem = null;

  document.addEventListener("DOMContentLoaded", function() { loadShopData(); });

  function loadShopData() {
    userAP = parseInt(localStorage.getItem(SHOP_KEY_AP) || 0);
    document.getElementById('shop-current-ap').innerText = userAP;
    const grid = document.getElementById('ap-grid-render');
    grid.innerHTML = '';
    SHOP_ITEMS.forEach(item => {
      const canBuy = userAP >= item.price;
      grid.innerHTML += `
        <div class="shop-card">
          <div class="item-icon">${item.icon}</div><div class="item-name">${item.name}</div><span class="item-price">âš¡ ${item.price} AP</span>
          <button class="buy-btn ${canBuy?'':'disabled'}" onclick="${canBuy?`confirmBuy(${item.id})`:''}">${canBuy?'REDEEM':'LOW BALANCE'}</button>
        </div>`;
    });
  }

  function confirmBuy(id) {
    selectedItem = SHOP_ITEMS.find(i => i.id === id);
    if(selectedItem) {
      document.getElementById('shop-modal').style.display = 'flex';
      document.getElementById('modal-title').innerText = "CONFIRMATION";
      document.getElementById('modal-msg').innerText = `Exchange ${selectedItem.price} AP for ${selectedItem.name}?`;
      document.getElementById('btn-confirm').style.display = 'inline-block';
      document.getElementById('btn-confirm').onclick = processTransaction;
      document.getElementById('coupon-display').style.display = 'none';
    }
  }

  function processTransaction() {
    userAP -= selectedItem.price;
    localStorage.setItem(SHOP_KEY_AP, userAP);
    loadShopData();
    try { document.getElementById('hud-ap-display').innerText = `âš¡ ${userAP} AP`; } catch(e) {}
    
    document.getElementById('modal-title').innerText = "SUCCESS!";
    document.getElementById('modal-msg').innerText = "Your Discount Code:";
    const codeBox = document.getElementById('coupon-display');
    codeBox.style.display = 'block'; codeBox.innerText = selectedItem.code;
    document.getElementById('btn-confirm').style.display = 'none';
  }

  function closeShopModal() { document.getElementById('shop-modal').style.display = 'none'; }
  function copyShopCode() { navigator.clipboard.writeText(document.getElementById('coupon-display').innerText); alert("Code copied!"); }
</script>

