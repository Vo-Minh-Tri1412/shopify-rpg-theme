      // --- LOGIC NH·∫¨N QU√Ä ---
      function openDailyPopup() {
        document.getElementById('daily-reward-modal').style.display = 'flex';
        updatePopupUI();
      }

      function closeModal(id) {
        document.getElementById(id).style.display = 'none';
